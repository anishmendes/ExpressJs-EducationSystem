<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Classes</title>
</head>
<body>
    <h1>Classes</h1>
    <form action="/classes" method="POST">
        <input type="text" name="name" placeholder="Class Name">
        <button type="submit">Add Class</button>
    </form>
    <ul>
        <% classes.forEach(cls => { %>
            <li><%= cls.name %></li>
        <% }); %>
    </ul>
</body>
</html>
